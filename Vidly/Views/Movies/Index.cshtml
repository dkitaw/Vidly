@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2> Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", new { Id = movie.Id }, null)*@
<a class="btn btn-primary"> New Movie </a>
@if (!Model.Any())
{
   <p>We Dont have any Movies yet</p>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name,"Details","Movies", new { Id= movie.Id },null )
                    </td>
                    <td>
                        @movie.Genre.Name
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

